<?php 
$userDetails = '';

if(isset($this->user['title']) && isset($this->user['faculty']) ) {
    $userDetails .= $this->user['title']. ', '.$this->user['faculty'];
} else if(isset($this->user['faculty'])) {
    $userDetails .= $this->user['faculty'];
} else if(isset($this->user['title'])) {
    $userDetails .= $this->user['title'];    
}
if(!empty($userDetails)) {
    $userDetails .= '<br />';
}
if(isset($this->user['phone'])) {
    $userDetails .= $this->user['phone'].'<br />';
}

