    $userDetails .= "<a href='mailto:{$this->user['email']}'>{$this->user['email']}</a>&nbsp;&nbsp;&nbsp;"; 
}
if(isset($this->user['profile'])) {
    $userDetails .= "<a href='{$this->user['profile']}'>profile</a>&nbsp;&nbsp;&nbsp;";
}
